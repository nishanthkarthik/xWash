extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Add washing machine
					div.signup-wall
						form(class='form-signin', action='/washer', method='POST')
							input(type='text', name='name', class='form-control', placeholder='Name',required, autofocus)
							input(type='text', name='location', class='form-control nomargin', placeholder='Location', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Add
							span.clearfix
					#message
					if message
						h1.text-center.error-message #{message}
