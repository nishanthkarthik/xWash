extends layout
 
block content
    div.center-align
        div.row
            div.col-md-4.col-md-offset-4
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title  Sign in to xWash
                    .panel-body
                        img.peopleimg(src='images/people.svg')
                        form(class='form-signin', action='/login', method='POST')
                            input.form-control.bottom-space-m(type='text', name='username', placeholder='User Name',required, autofocus)
                            input.form-control.bottom-space-l(type='password', name='password', placeholder='Password', required)
                            button.btn.btn-primary.bottom-space-l(type='submit') Sign in
                        a.text-center.bottom-space(href='/signup') Create an account

                        #message
                            if message
                                h3 #{message}