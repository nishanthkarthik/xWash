extends layout

block content
	div.center-align
		div.row
			div.col-md-4.col-md-offset-4
				.panel.panel-primary
					.panel-heading
						h3.panel-title  Sign up for xWash
					.panel-body
						img.peopleimg(src='images/people.svg')
						form(class='form-signin', action='/signup', method='POST')
							input.form-control.bottom-space-m(type='text', name='username', placeholder='Username',required, autofocus)
							input.form-control.bottom-space-m(type='password', name='password', placeholder='Password', required)
							input.form-control.bottom-space-l(type='text', name='rollno', placeholder='Roll number',required)
							button.btn.btn-primary.bottom-space-l(class='btn btn-lg btn-primary btn-block', type='submit') Register
							a.text-center.bottom-space(href='/') Already have an account?

						#message
							if message
								h3 #{message}

